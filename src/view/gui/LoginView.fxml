<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="365.0" prefWidth="293.0" style="-fx-background-color: #FFDEAD;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.gui.LoginViewController">
   <children>
      <Pane prefHeight="313.0" prefWidth="296.0">
         <children>
            <Button fx:id="btLogin" layoutX="104.0" layoutY="203.0" mnemonicParsing="false" onAction="#onBtLoginAction" style="-fx-background-color: #CD853F; -fx-border-radius: 7px; -fx-border-color: #FFF; -fx-background-radius: 7px;" text="LOGIN" textFill="WHITE">
               <font>
                  <Font name="DejaVu Sans Bold" size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <TextField fx:id="txtEmail" layoutX="52.0" layoutY="95.0" onKeyTyped="#onKeyTxtEmailAction" promptText="EMAIL" style="-fx-color: #CD853F;">
               <font>
                  <Font name="DejaVu Sans Bold" size="13.0" />
               </font>
            </TextField>
            <TextField fx:id="txtTelefone" layoutX="52.0" layoutY="158.0" onKeyTyped="#onKeyTxtTelefoneAction" promptText="TELEFONE" style="-fx-color: #CD853F;">
               <font>
                  <Font name="DejaVu Sans Bold" size="13.0" />
               </font>
            </TextField>
            <Label fx:id="lblEmail" layoutX="52.0" layoutY="69.0" onMouseClicked="#onMouseClickLblEmailAction" text="EMAIL" textFill="PERU">
               <font>
                  <Font name="DejaVu Sans Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="lblTelefone" layoutX="53.0" layoutY="135.0" onMouseClicked="#onMouseClickLblTelefoneAction" text="TELEFONE" textFill="PERU">
               <font>
                  <Font name="DejaVu Sans Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="lblErroEmail" layoutX="243.0" layoutY="100.0" textFill="#e81212" />
            <Label fx:id="lblErroTelefone" layoutX="245.0" layoutY="164.0" textFill="#ee1111" />
            <Button fx:id="btCadastro" layoutX="87.0" layoutY="249.0" mnemonicParsing="false" onAction="#onBtCadastroAction" style="-fx-background-color: white; -fx-border-radius: 7px; -fx-border-color: #CD853F; -fx-background-radius: 7px;" text="CADASTRO" textFill="PERU">
               <font>
                  <Font name="DejaVu Sans Bold" size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </Pane>
   </children>
</VBox>
